                    <div class="col-md-6">
                        <label class="control-label">Status</label>-->
                        @*@Html.LabelFor(model => model.StatusId, htmlAttributes: new { @class = "control-label" })*@
                        <!--@Html.DropDownListFor(model => model.StatusId, new SelectList(ViewBag.StatusList, "Value", "Text"), "Select Status", new { @class = "form-control", style = "width: 300px;" })
                        @Html.ValidationMessageFor(model => model.StatusId, "", new { @class = "text-danger" })
                    </div>
