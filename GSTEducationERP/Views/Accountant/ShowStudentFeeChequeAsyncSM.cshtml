                        @Html.LabelFor(model => model.Course, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Course, new { htmlAttributes = new { @class = "form-control", style = "width: 300px;", @readonly = "readonly" } })
