<body>
    <br />
    @{
        string currentAction = ViewContext.RouteData.Values["action"].ToString();
        bool showAdmissionTypeFilter = currentAction == "ListAllChequeReceiptAsyncSM";
    }
    <div class="card p-2">
        <div class="row g-6">
            <div class="col-md-10 justify-content-lg-start">
                <h2>Cheque Details</h2>
            </div>
        </div>
        <hr />
        <div class="card-body">
            <div class="container" style="margin-left:-10px">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card card-primary card-outline card-outline-tabs">
                            <div class="card-header p-0 border-bottom-0">
                                <ul class="nav nav-tabs" id="custom-tabs-four-tab" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" data-toggle="pill" href="@Url.Action("ListAllChequeReceiptAsyncSM", "Accountant")" role="tab" aria-controls="custom-tabs-four-home" aria-selected="true">Cheque Received</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="pill" href="@Url.Action("_ListAllChequeExpenseAsyncSM", "Accountant")" role="tab" aria-controls="custom-tabs-four-profile" aria-selected="true">Cheque Expense</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 form-group d-flex align-items-center justify-content-center" id="admissionTypeFilterContainer">
                        <label id="admissionTypeFilter1" for="admissionTypeFilter" style="font-size: 15px; margin-right: 10px;">Admission Type</label>
                        <select id="admissionTypeFilter" class="form-control">
                            <option value="All">All Types</option>
                            <option value="EXTERNAL">EXTERNAL</option>
                            <option value="INTERNAL">INTERNAL</option>
                        </select>
                    </div>
                  <div class="col-md-3 form-group d-flex align-items-center justify-content-center">
                        <label id="statusFilterLabel" for="statusFilter" style="font-size: 15px; margin-right: 10px;">Status</label>
                        <select id="statusFilter" class="form-control">
                            <option value="All">All</option>
                            <option value="Pending">Pending</option>
                            <option value="Completed">Completed</option>
                            <option value="Bounced">Bounced</option>
                        </select>
                    </div>
                    <div class="card card-primary card-outline card-outline-tabs p-2">
                        <div id="ChequeList" class="icon-container"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*<div class="card-body">*@
    @*<div class="card card-primary card-outline card-outline-tabs p-2">
                <div id="ChequeList" class="icon-container"></div>
            </div>
        </div>*@
    @*</div>*@
    <script src="~/Content/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/plugins/datatables/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/Content/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js" type="text/javascript"></script>
    <script src="~/Content/plugins/datatables-responsive/js/dataTables.responsive.min.js" type="text/javascript"></script>
    <script src="~/Content/plugins/datatables-responsive/js/responsive.bootstrap4.min.js" type="text/javascript"></script>
    <script src="~/Content/plugins/datatables-buttons/js/dataTables.buttons.min.js" type="text/javascript"></script>
    <script src="~/Content/plugins/datatables-buttons/js/buttons.bootstrap4.min.js" type="text/javascript"></script>
    <script src="~/Content/plugins/jszip/jszip.min.js" type="text/javascript"></script>
    <script src="~/Content/plugins/pdfmake/pdfmake.min.js" type="text/javascript"></script>
    <script src="~/Content/plugins/pdfmake/vfs_fonts.js" type="text/javascript"></script>
    <script src="~/Content/plugins/datatables-buttons/js/buttons.html5.min.js" type="text/javascript"></script>
    <script src="~/Content/plugins/datatables-buttons/js/buttons.print.min.js" type="text/javascript"></script>
    <script src="~/Content/plugins/datatables-buttons/js/buttons.colVis.min.js" type="text/javascript"></script>
    <script>
        jQuery(document).ready(function ($) {
            function loadTabContent(tabContentUrl, admissionTypeFilter, statusFilter) {
                $.ajax({
                    url: tabContentUrl,
                    type: 'GET',
                    data: { filter: admissionTypeFilter, status: statusFilter },
                    success: function (data) {
                        $('#ChequeList').html(data);
                        var table = $('#ChequeList table').DataTable({
                            "responsive": true,
                            "lengthChange": false,
                            "autoWidth": false,
                            "stateSave": true,
                            "buttons": [
                                {
                                    extend: 'pdf',
                                    text: '<img src="/Content/Admin/icon/pdf-file.png" title="pdf" alt="pdf" height="20" width="20" />',
                                    titleAttr: 'PDF'
                                },
                                {
                                    extend: 'excel',
                                    text: '<img src="/Content/Admin/icon/xls-file.png" title="xls" alt="xls" height="20" width="20" />',
                                    titleAttr: 'Excel'
                                },
                                {
                                    extend: 'csv',
                                    text: '<img src="/Content/Admin/icon/csv.jpg" title="CSV" alt="CSV" height="25" width="25" />',
                                    titleAttr: 'CSV'
                                },
                                {
                                    extend: 'copy',
                                    text: '<img src="/Content/Admin/icon/copy.png" title="Copy" alt="Copy" height="20" width="20" />',
                                    titleAttr: 'Copy'
                                },
                                {
                                    extend: 'print',
                                    text: '<img src="/Content/Admin/icon/printer.png" title="printer" alt="printer" height="20" width="20" />',
                                    titleAttr: 'Print'
                                }
                            ]
                        });
                        table.buttons().container().appendTo('#ChequeList .col-md-6:eq(0)');
                    },
                    error: function () {
                        alert('Error loading content.');
                    }
                });
            }

            var defaultTabUrl = '@Url.Action("ListAllChequeReceiptAsyncSM", "Accountant")';
            var defaultAdmissionTypeFilter = $('#admissionTypeFilter').val();
            var defaultStatusFilter = $('#statusFilter').val();

            loadTabContent(defaultTabUrl, defaultAdmissionTypeFilter, defaultStatusFilter);

            $('#custom-tabs-four-tab').on('click', '.nav-link', function (e) {
                e.preventDefault();
                var tabContentUrl = $(this).attr('href');
                var admissionTypeFilter = $('#admissionTypeFilter').val();
                var statusFilter = $('#statusFilter').val();
                var isReceiptTab = $(this).attr('href').includes("ListAllChequeReceiptAsyncSM");

                if (isReceiptTab) {
                    $('#admissionTypeFilter').show();
                    $('#admissionTypeFilter1').show();
                } else {
                    $('#admissionTypeFilter').hide();
                    $('#admissionTypeFilter1').hide();
                }

                loadTabContent(tabContentUrl, admissionTypeFilter, statusFilter);
            });

            $('#admissionTypeFilter, #statusFilter').on('change', function () {
                var tabContentUrl = $('#custom-tabs-four-tab .nav-link.active').attr('href');
                var admissionTypeFilter = $('#admissionTypeFilter').val();
                var statusFilter = $('#statusFilter').val();
                loadTabContent(tabContentUrl, admissionTypeFilter, statusFilter);
            });
        });
    </script>

</body>
</html>

