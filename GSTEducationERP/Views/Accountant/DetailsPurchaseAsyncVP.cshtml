<body style="margin: 0; padding: 0;">
    @using (Html.BeginForm("DetailsPurchaseAsyncVP", "Accountant"))
    {
        <br />
        <div class="card">
            <div class="card-body" style="padding-top:0px; ">
                <div class="row">
                    <div class="col-md-6 text-left mt-1" style="padding-left:20px;">
                        <h2>Purchase Details</h2>
                    </div>

                    <div class="col-md-6 text-right mt-1" style="padding-right:10px;">
                        <a href="/Accountant/AddPurchaseAsyncVP" title="Add New Purchase">
                            <img src="~/Content/Admin/icon/Add.jpeg" style="height:30px; width:30px;" />
                        </a>
                    </div>
                </div>
                <br />
            </div>
            <div class="container" style="margin-left:-10px">
                <div class="row">
                    <div class="col-6">
                        <div class="input-group">
                            <div class="form-group col-md-4">
                                <div id="CourseSection">
                                    <label>Status</label>
                                    <select id="ddlStatus" class="form-control">
                                        <option value="Pending">Pending</option>
                                        <option value="Settled">Settled</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-8 row">
                                <div class="form-group col-md-6">
                                    <label>Start Date</label>
                                    <input type="date" class="form-control" id="startDate" name="startDate">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>End Date</label>
                                    <input type="date" class="form-control" id="endDate" name="endDate">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <table id="PurchaseList" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th hidden>
                                    @Html.HiddenFor(model => model.TransactionCode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.VendorName)
                                </th>

                                <th>
                                    Items
                                </th>
                                <th>
                                    Items Count
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TransactionAmount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BalanceAmount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TransactionDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PaymentMode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TranId_CheqNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BankName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.lstPurchaseVP != null)
                            {
                                for (int i = 0; i < Model.lstPurchaseVP.Count; i++)
                                {
                                    var item = Model.lstPurchaseVP[i];
                                    <tr>
                                        <td hidden>
                                            @Html.HiddenFor(modelItem => item.TransactionCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.VendorName)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.ItemName)
                                        </td>
                                        <td>
                                            <a href="#" class="icon" data-id="@item.TransactionCode" data-url="@Url.Action("ListPurchasedItem", "Bind", new { batchcode = item.BatchCode  })"
                                               data-toggle="modal" data-target="#StudentModal" title="Student List">
                                                @Html.DisplayFor(modelItem => item.Quantity)
                                            </a>
                                           
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TransactionAmount)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BalanceAmount)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TransactionDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PaymentMode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TranId_CheqNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BankName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </td>

                                        <td style="text-align: center;">
                                            <a href="#" class="icon" data-toggle="tooltip" title="View Exam File" data-studentCode="@item.TransactionCode" onclick="viewExamFile('')">
                                                <video width="25" height="25" playsinline loop>
                                                    <source src="~/Content/Admin/icon/view.mp4" type="video/mp4">
                                                </video>
                                            </a>
                                            <a href="#" class="icon" data-toggle="tooltip" title="Edit Exam" data-examid="@item.TransactionCode">
                                                <video width="25" height="25" playsinline loop >
                                                    <source src="~/Content/Admin/icon/Edit%20Details.mp4" type="video/mp4" />
                                                </video>
                                                
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
               
            </div>

        </div>
    }

    <div class="modal fade" id="SectionModal" tabindex="-1" role="dialog" aria-labelledby="SectionModalLabel" aria-hidden="true">
