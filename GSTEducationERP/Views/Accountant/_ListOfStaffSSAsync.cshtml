@model GSTEducationERPLibrary.Accountant.Accountant
<html>
<head>
    <link href="~/Content/Admin/css/UI.css" rel="stylesheet" />
    <style>
        .modal-header .close {
            font-size: 2.5rem; /* Set the font size */
            padding: 15px; /* Increase padding to increase overall size */
            transition: color 0.3s; /* Add transition effect for smooth hover */
        }

            .modal-header .close:hover {
                color: red; /* Change the color on hover */
            }
    </style>
</head>
<body>
    <div class="row">
        <div class="col-md-4 form-group" style="width:fit-content;display:flex">
            <label style="font-size: 15px;" class="col-md-3">Department</label>
            @Html.DropDownListFor(model => model.DepartmentID, (SelectList)ViewBag.Department, "Select Department", new { @class = "form-control select2 col-md-6", id = "DepartmentID" })
            @Html.ValidationMessageFor(model => model.DepartmentID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <table id="ShortlistedStudents" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th hidden>
                            @Html.DisplayNameFor(model => model.DepartmentID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StaffName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DepartmentName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Designation)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BankName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AccountNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IFSCCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.GrossSalary)
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody id="staffListBody">
                    @if (Model != null && Model.lstEmp != null)
                    {
                        for (int i = 0; i < Model.lstEmp.Count; i++)
                        {
                            var item = Model.lstEmp[i];
                            <tr data-department-id="@item.DepartmentID">
                                <td hidden>
                                    @Html.DisplayFor(modelItem => item.DepartmentID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StaffName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DepartmentName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Designation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BankName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AccountNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IFSCCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GrossSalary)
                                </td>
                                <td style="text-align: center;">
                                    <a href="#" class="icon" data-toggle="modal" data-target="#resultModal" data-id="@item.StaffCode" title="Schedule Interview">
                                        <video width="25" height="25" playsinline loop>
                                            <source src="~/Content/Admin/icon/schedule.mp4" type="video/mp4">
                                        </video>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="resultModal" tabindex="-1" role="dialog" aria-labelledby="resultModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title " id="resultModalLabel">Schedule Interview</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="background-color:transparent">
                    <!-- Result form content will be loaded here -->
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/plugins/jquery/jquery.min.js" type="text/javascript"></script>
    <script src="~/Content/plugins/bootstrap/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <script src="~/Content/Admin/js/Icon.js"></script>
    <script>
        $(document).ready(function () {
            // Function to filter the dataset based on the selected department ID
            function filterDataset(departmentID) {
                $('#staffListBody tr').each(function () {
                    var row = $(this);
                    var rowDepartmentID = row.data('department-id');
                    if (departmentID === "" || rowDepartmentID == departmentID) {
                        row.show();
                    } else {
                        row.hide();
                    }
                });
            }

            // Event handler for department dropdown change
            $("#DepartmentID").change(function () {
                var departmentID = $(this).val();
                filterDataset(departmentID);
            });

            $('.icon').click(function () {
                console.log('Icon clicked');
                var action = $(this).data('action');
                var id = $(this).data('id');
                var round1 = 'First';

                console.log('ID:', id);
                console.log('Round:', round1);

                // Update modal title
                $('#resultModalLabel').text(action);

                // Load partial view into modal body
                $('#resultModal .modal-body').load('/Placement/ScheduleInterviewAsyncSN?id=' + id + '&round=' + round1, function (response, status, xhr) {
                    console.log('Load Status:', status);
                    if (status === "error") {
                        console.log('Error:', xhr.status, xhr.statusText);
                    }
                });
            });

            // Event listener for the Cancel button
            $('#resultModal').on('click', '#btnCancel', function () {
                $('#resultModal').modal('hide');
            });
        });
    </script>
</body>
</html>
